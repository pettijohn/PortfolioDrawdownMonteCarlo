{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Docker Build - Custom",
			"type": "shell",
			"command": "./build.sh",
			"problemMatcher": [ "$tsc" ],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
                "shell": {
                    "executable": "wsl.exe",
                    "args": [
                    	"-e",
                      	"sh",
                        "-c"
                    ]
                }
            },
		}
	]
}