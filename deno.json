{
    "compilerOptions": {
      "lib": ["dom", "dom.iterable", "dom.asynciterable", "deno.ns"]
    },
    "deno.suggest.imports.hosts": {
      "https://deno.land": true
    },
    "lint": {
      "files": {
        "include": ["src/"],
        "exclude": ["docs/", "data/", "out/"]
      },
      "rules": {
        "tags": ["recommended"],
        "include": ["ban-untagged-todo"],
        "exclude": ["no-unused-vars"]
      }
    }
}